{
  "compilerOptions": {
    "target": "es2020", // Or a newer target like "es2020" for modern Node.js versions
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Root directory of your TypeScript source files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.hbs"], // Include all .ts files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}